<%= render "shared/header" %>
<main>
  <h1>ユーザー新規登録</h1>

  <%= form_with model: @user, url: user_registration_path, class: 'UserSignUpForm', local: true do |f| %>
    <%= render "devise/shared/error_messages", model: f.object %>

    <div class='FormInputsWrapper'>
      <div class="FormContainer">
        <div class="FormText">
          プロフィール画像
        </div>
        <div class='UserSignUpIconWrap hidden'></div>
        <%= f.label :image, '画像を選択する', class: 'UserSignUpImageLabel' %>
        <%= f.file_field :image, class: 'UserSignUpImageForm' %>
      </div>

      <div class="FormContainer">
        <div class="FormText">
          <%= f.label :name, 'ユーザーネーム' %>
          <span class="FormRequired">必須</span>
        </div>
        <%= f.text_field :name, class: 'FormInput UserSignUpName', placeholder: '例)ichear太郎', maxlength: '40' %>
      </div>

      <div class="FormContainer">
        <div class='FormText'>
          <%= f.label :email, 'Eメールアドレス' %>
          <span class='FormRequired'>必須</span>
        </div>
        <%= f.email_field :email, class: 'FormInput UserSignUpEmail', placeholder: '例)xxxx@gmail.com' %>
      </div>

      <div class="FormContainer">
        <div class='FormText'>
          <%= f.label :password, 'パスワード' %>
          <span class='FormRequired'>必須</span>
        </div>
        <%= f.password_field :password, class:'FormInput UserSignUpPassword', placeholder: '6文字以上の半角英数字' %>
      </div>

      <div class="FormContainer">
        <div class='FormText'>
          <%= f.label :password_confirmation, 'パスワード確認用' %>
          <span class='FormRequired'>必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:'FormInput UserSignUpPassword', placeholder: '同じパスワードを入力' %>
      </div>

      <div class="FormContainer">
        <div class="FormText">
          <%= f.label :self_introduction, '自己紹介' %>
        </div>
        <%= f.text_area :self_introduction, class: 'FormInput UserSignUpSelfIntroduction', placeholder: '自己紹介文を書く（上限1,000文字）', maxlength: '1000' %>
      </div>
    </div>

    <%= f.submit "新規登録する", class:'SubmitButton' %>
  <% end %>

</main>
<%= render "shared/footer" %>